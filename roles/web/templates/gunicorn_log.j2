{{ application_log_dir }}/gunicorn/*.log {
    daily
    missingok
    rotate 60
    compress
    delaycompress
    notifempty
    create 0640 nobody nogroup
    sharedscripts
 
    postrotate
        [ -s {{ virtualenv_path }}/run/gunicorn.pid ] && kill -USR1 `cat {{ virtualenv_path }}/run/gunicorn.pid`
    endscript    
}